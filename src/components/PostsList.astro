---
const posts = await Astro.glob("../pages/posts/*.md");
posts.reverse();
---

<main class="container">
  {
    posts.map((post) => (
      <article>
        <a href={post.url}>
          <h4>{post.frontmatter.title}</h4>
        </a>
        <small>
          {new Date(post.frontmatter.pubDate).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })}
        </small>
      </article>
    ))
  }
</main>
